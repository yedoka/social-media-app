{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,

    "lib": ["dom", "dom.iterable", "ES2022"],

    "jsx": "react-jsx",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
